@model User


<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <h1 style="color: #3d7ef8;     font-size: 35px; font-weight: 750;  ">
                Create a new account
            </h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-4">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Firstname" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Lastname" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-group mt-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>





            <style>
                .form-group {
                    display: flex;
                    flex-direction: column;
                }

                    .form-group .btn {
                        margin-bottom: 10px;
                    }
            </style>

            <div class="form-group my-5">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-controller="User" asp-action="Login" class="btn btn-secondary">Already have an account ? Login</a>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}



