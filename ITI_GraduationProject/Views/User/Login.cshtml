@model User

<div class="d-flex justify-content-center align-items-center">
    <h1 style="color: #3d7ef8;     font-size: 60px; font-weight: 750;  ">
        Login
    </h1>
</div>
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Login">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group mt-4">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-group mt-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>





            <style>

                .form-actions {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    height: 25vh;
                }

                    .form-actions .btn {
                        margin-bottom: 20px;

                    }


            </style>

            <div class="form-actions">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a asp-controller="User" asp-action="Create" class="btn btn-secondary">Don't have an account ? Register here</a>
            </div>





        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}



