@model IEnumerable<Category>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Category Id</th>
            <th scope="col">Category Name</th>
            <th scope="col"> Description</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="col">@item.Id</th>
                <th scope="col">@item.Name</th>
                <th scope="col">@item.Description</th>


                <th scope="col">
                    <a asp-controller="Category" asp-action="ViewDetails" asp-route-id="@item.Id" class="btn btn-outline-info mx-2">View</a>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning mx-2">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Add Category</a>
    </tfoot>
</table>