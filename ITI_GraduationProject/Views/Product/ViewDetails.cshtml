@model Product




<div class=" card border-dark mb-3 text-white bg-secondary mb-3" style="max-width: 27rem;">
    <div class="card-header">Product Details</div>
    <div class="card-body">
        <h3 class="card-title">Product Title: @Model.Title</h3>
        <h5 class="card-subtitle mb-2 ">Product Id: @Model.Id                  </h5>
        <h5 class="card-subtitle mb-2 ">Product Quantity: @Model.Quantity      </h5>
        <h5 class="card-subtitle mb-2 ">Product Title: @Model.Title            </h5>
        <h5 class="card-subtitle mb-2 ">Product Price: @Model.Price            </h5>
        <h5 class="card-subtitle mb-2 ">Product Discription: @Model.Description</h5>
        <h5 class="card-subtitle mb-2 ">Product img path: @Model.ImagePath     </h5>
        <h5 class="card-subtitle mb-2 ">Category Name: @Model.Category!.Name   </h5>



        <div class="d-flex justify-content-center">
            <a asp-controller="Product" asp-action="Index" class="btn btn-dark btn-lg ">Back</a>
        </div>
    </div>
</div>
